---
import MainLayout from "../layouts/main.astro";
---

<MainLayout>
    <div class="w-full flex flex-col gap-3">
        <h1 class="text-2xl font-medium">Motorsport Calendar</h1>

        <div class="grid grid-flow-col gap-5 text-center auto-cols-max">
            <div
                class="flex flex-col p-2 bg-neutral rounded-box text-neutral-content"
            >
                <span
                    class="countdown font-mono text-5xl"
                    data-date-component="days"
                >
                    <span></span>
                </span>
                days
            </div>
            <div
                class="flex flex-col p-2 bg-neutral rounded-box text-neutral-content"
            >
                <span
                    class="countdown font-mono text-5xl"
                    data-date-component="hours"
                >
                    <span></span>
                </span>
                hours
            </div>
            <div
                class="flex flex-col p-2 bg-neutral rounded-box text-neutral-content"
            >
                <span
                    class="countdown font-mono text-5xl"
                    data-date-component="mins"
                >
                    <span></span>
                </span>
                mins
            </div>
            <div
                class="flex flex-col p-2 bg-neutral rounded-box text-neutral-content"
            >
                <span
                    class="countdown font-mono text-5xl"
                    data-date-component="secs"
                >
                    <span></span>
                </span>
                secs
            </div>
        </div>
    </div>
</MainLayout>
