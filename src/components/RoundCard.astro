<style lang="scss">
    .round-header {
        :global(*) {
            --color-hue: inherit;
        }

        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: var(--size-3);
        padding: var(--size-5);

        box-shadow: none;

        isolation: isolate;
        position: relative;
        overflow: hidden;

        > :global([data-icon]) {
            color: var(--color-6);
            font-size: 12rem;

            position: absolute;
            top: calc(50% - 6rem);
            right: -1.5rem;
            z-index: -1;

            transition: all 140ms cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }

        &:hover {
            box-shadow: none;

            > :global([data-icon]) {
                color: var(--color-5);
            }
        }

        &.past {
            opacity: 0.5;
        }
    }
</style>
