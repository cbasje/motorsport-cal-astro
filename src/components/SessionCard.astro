---
import type { Session } from "@prisma/client";
import type { SeriesId } from "lib/types";
import { getSessionTitle } from "lib/utils/sessions";
import Time from "./Time.svelte";

interface Props {
    session: Session;
    series: SeriesId;
    timeZone: string;
}
const { session, series, timeZone } = Astro.props;
---

<h3>
    {getSessionTitle(series, session.type, session.number)}
</h3>
<Time
    startDate={session.startDate}
    endDate={session.endDate}
    timeZone={timeZone ?? undefined}
    client:idle
/>
